.page-header {
    @apply bg-gray-50 border-gray-400 p-2 text-gray-800;
    @apply dark:bg-gray-700 dark:border-gray-900 dark:text-gray-200;
}

.page-sidebar {
    @apply bg-gray-100 p-4 border-gray-400 text-gray-500;
    @apply dark:bg-gray-700 dark:border-gray-900 dark:text-gray-400;

    &.right {
        @apply border-l;
    }

    &.left {
        @apply border-r;
    }
}

.page-content {
    @apply bg-gray-200;
    @apply dark:bg-gray-800;
}